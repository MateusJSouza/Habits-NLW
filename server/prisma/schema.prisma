// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habits {
  id         String   @id @default(uuid()) // preenche o id automaticamente com o UUID
  title      String
  created_at DateTime

  @@map("habits")
}
